@{
    //var cols = _Fun.DefHCols;
}

<form id='eform' class='xg-form'>
    @await Component.InvokeAsync("XiHide", new { fid = "SignId" })
    @await Component.InvokeAsync("XiHide", new { fid = "LeaveId" })

    @await Component.InvokeAsync("XiRead", new { title = "請假人", fid = "UserName" })
    @await Component.InvokeAsync("XiRead", new { title = "代理人", fid = "AgentName" })
    @await Component.InvokeAsync("XiRead", new { title = "假別", fid = "LeaveName" })
    @await Component.InvokeAsync("XiRead", new { title = "開始時間", fid = "StartTime", format = FormatEstr.Dt2 })
    @await Component.InvokeAsync("XiRead", new { title = "結束時間", fid = "EndTime", format = FormatEstr.Dt2 })
    @await Component.InvokeAsync("XiRead", new { title = "請假時數", fid = "Hours" })
    @await Component.InvokeAsync("XiLinkFile", new { title = "上傳檔案", fid = "FileName" })
    @*await Component.InvokeAsync("XiRead", new { title = "流程狀態", fid = "FlowStatusName" })*@
    @*await Component.InvokeAsync("XiCheck", new { title = "資料狀態", fid = "Status", label = "啟用" })*@
    @*await Component.InvokeAsync("XiRead", new { title = "建檔人員", fid = "CreatorName" })*@
    @await Component.InvokeAsync("XiRead", new { title = "建檔日期", fid = "Created", format = FormatEstr.Dt })
    @await Component.InvokeAsync("XiSelect", new { title = "審核結果", fid = "SignStatus", rows = _Code.GetSignTypes() })
    @await Component.InvokeAsync("XiText", new { title = "審核意見", fid = "Note", maxLen = 100, cols = "2,8" })
    @*await Component.InvokeAsync("XiRead", new { title = "修改人員", fid = "ReviserName" })*@
    @*await Component.InvokeAsync("XiRead", new { title = "修改日期", fid = "Revised", format = FormatEstr.Dt })*@

    @*
        <div class="row">
            <div class="col-md-2 xg-label">簽核流程</div>
            <div class="col-md-8 xg-input" id="divSignRows"></div>
        </div>
    *@
</form>

<div class='xg-center'>
    <button type='button' class='btn xg-btn-size btn-success' onclick='_me.onSubmit()'>送出</button>
    <button type='button' class='btn xg-btn-size btn-primary' onclick='_crud.onToRead()'>回上一頁<i class='ico-back'></i></button>
</div>

