@inject IHtmlLocalizer<HrAdm.R0> R0
@inject IViewLocalizer R

<script src="~/js/view/User.js"></script>
<script type="text/javascript">
    $(function () {
        _me.init();
    });
</script>

@await Component.InvokeAsync("XgProgPath", new { names = new string[] { R0["MenuUser"].Value } })
<div class="xp-prog">
    <div id="divRead">
        <form id='formRead' class='xg-form'>
            <div class="row">
                @await Component.InvokeAsync("XiText", new { title = R["Account"].Value, fid = "Account", maxLen = 20, inRow = true })
                @await Component.InvokeAsync("XgFindTbar", new { hasReset = true })
            </div>
            @await Component.InvokeAsync("XiText", new { title = R["UserName"].Value, fid = "Name", maxLen = 20 })
            @await Component.InvokeAsync("XiSelect", new { title = R["Dept"].Value, fid = "DeptId", rows = (List<IdStrDto>)ViewBag.Depts })
        </form>

        <div class='xg-btns-box'>
            @await Component.InvokeAsync("XgCreate")
        </div>
        <table id="tableRead" class="table table-bordered xg-table" cellspacing="0">
            <thead>
                <tr>
                    <th>@R["Account"]</th>
                    <th>@R["UserName"]</th>
                    <th>@R["Dept"]</th>
                    <th>@R0["Status"]</th>
                    <th>@R0["Crud"]</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div id="divEdit" class="xg-hide">
        <form id='eform' class='xg-form' style='margin-bottom:0;'>
            @await Component.InvokeAsync("XiHide", new { fid = "Id" })
            @await Component.InvokeAsync("XiText", new { title = R["Account"].Value, fid = "Account", required = true, maxLen = 20 })
            @await Component.InvokeAsync("XiText", new { title = R["UserName"].Value, fid = "Name", required = true, maxLen = 20 })
            @await Component.InvokeAsync("XiText", new { title = R["Pwd"].Value, fid = "Pwd", type = "password", maxLen = 32 })
            @await Component.InvokeAsync("XiSelect", new { title = R["Dept"].Value, fid = "DeptId", rows = (List<IdStrDto>)ViewBag.Depts })
            @await Component.InvokeAsync("XiCheck", new { title = R0["Status"].Value, fid = "Status", label = R0["Active"].Value })
        </form>

        <form class='xg-form'>
            <div class='row'>
                <div class='col-md-2 xg-label'>@R["RoleList"]</div>
                <div class='col-md-8 xg-input'>
                    <!-- table for control rows column has same width -->
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tbody>
                            <tr>
                                <td id="divRoles">
                                    @foreach (var row in (List<IdStrDto>)ViewBag.Roles)
                                    {
                                        @await Component.InvokeAsync("XiCheck", new { fid = row.Id, value = row.Id, label = row.Str })
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
        @await Component.InvokeAsync("XgSaveBack")
    </div>
</div>